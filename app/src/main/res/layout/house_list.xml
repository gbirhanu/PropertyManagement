<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
  <androidx.cardview.widget.CardView
      android:foreground="?android:attr/selectableItemBackground"
      android:clickable="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="120dp"
          android:layout_height="160dp"
          android:scaleType="centerCrop"
          android:padding="2dp"
          android:src="@mipmap/ic_launcher"
          />
      <TextView
          android:id="@+id/houseTypes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_toRightOf="@id/imageView"
          android:text="Type"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
          android:textColor="#000000" />
      <TextView
          android:id="@+id/serviceTypes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/houseTypes"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:layout_toRightOf="@id/imageView"
          android:text="Service Type"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
      <TextView
          android:id="@+id/textViewRating"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/serviceTypes"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:layout_toRightOf="@id/imageView"
          android:background="@color/deeppurple"
          android:paddingRight="15dp"
          android:text="No of rooms"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
          android:textStyle="bold" />
      <TextView
          android:id="@+id/housePrices"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/textViewRating"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:layout_toRightOf="@id/imageView"
          android:text="ETB 56990"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
          android:textStyle="bold" />
      <TextView
          android:id="@+id/ownerName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/housePrices"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:layout_toRightOf="@id/imageView"
          android:background="@android:color/holo_orange_dark"
          android:visibility="gone"
          android:paddingRight="15dp"
          android:text="User Name "
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
          android:textStyle="bold" />
      <TextView
          android:id="@+id/ownerPhones"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone"
          android:layout_below="@id/ownerName"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:layout_toRightOf="@id/imageView"
          android:text="Phone Number"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
          android:textStyle="bold" />
      <TextView
          android:id="@+id/forWhat"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="visible"
          android:layout_below="@id/ownerPhones"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:layout_toRightOf="@id/imageView"
          android:text="Phone Number"
          android:textColor="@color/deeppurple"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
          android:textStyle="bold" />
      <Button
          android:id="@+id/ownerInfo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/forWhat"
          android:layout_toRightOf="@id/imageView"
          android:text="@string/house_profile_txt"
          />

    </RelativeLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>